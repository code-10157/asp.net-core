@model IEnumerable<TaskList2.Models.Project>

@{
    ViewData["Title"] = "Index";
}

<h3>Project</h3>

<p>
    <a asp-action="Create">新規追加</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            入力※: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="検索" class="btn btn-outline-secondary" /> |<!--class="btn btn-outline-primary style="background-color:#C0C0C0"-->
            <a asp-action="Index">絞り込みなし</a>
            <br />※プロジェクト名
        </p>
    </div>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                <!--Html.DisplayNameFor(model => model.Category)-->
                <a asp-action="Index" asp-route-sortOrder="@ViewData["CatSortParm"]">@Html.DisplayNameFor(model => model.Category)</a>
            </th>
            <th>
                <!--Html.DisplayNameFor(model => model.ProjectName)-->
                <!--<a asp-action="Index" asp-route-sortOrder="ViewData["NameSortParm"]">Html.DisplayNameFor(model => model.ProjectName)</a>-->
                <!--
                Html.ActionLink(
                Html.DisplayNameFor(model => model.ProjectName).ToString(),"sortOrder",new { sortOrder = ViewData["NameSortParm"] }  )
                -->
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.ProjectName)</a>
            </th>
            <th>
                <!--Html.DisplayNameFor(model => model.StartDate)-->
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">@Html.DisplayNameFor(model => model.StartDate)</a>
            </th>
            <th>
                <!--Html.DisplayNameFor(model => model.CompletionDate)-->
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">@Html.DisplayNameFor(model => model.CompletionDate)</a>
            </th>
            
            <th>
                <!--Html.DisplayNameFor(model => model.Status)-->
                <a asp-action="Index" asp-route-sortOrder="@ViewData["StaSortParm"]">@Html.DisplayNameFor(model => model.Status)</a>
            </th>
            
            <th>
                <!--Html.DisplayNameFor(model => model.Priority)-->
                <a asp-action="Index" asp-route-sortOrder="@ViewData["PriSortParm"]">@Html.DisplayNameFor(model => model.Priority)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompletionDate)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Priority)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comment)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">編集</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">詳細</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">削除</a>
                </td>
            </tr>
        }
    </tbody>
</table>
